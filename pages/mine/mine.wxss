/* pages/mine/mine.wxss */
page {
  background: #f5f5f5;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.page {
  flex: 1;
}

/* Profile Header */
.profile-header {
  background: linear-gradient(135deg, #FF8C00, #FF5D00);
  padding: 48rpx 24rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  border: 4rpx solid rgba(255,255,255,0.5);
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.profile-nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.profile-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.profile-id {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.profile-badge {
  background: rgba(255,255,255,0.25);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.profile-arrow {
  font-size: 30rpx;
  color: rgba(255,255,255,0.7);
}

/* Section */
.section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 28rpx 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
}

.section-action {
  font-size: 26rpx;
  color: #FF5D00;
}

/* Order Tabs */
.order-tabs {
  display: flex;
  justify-content: space-between;
}

.order-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.order-tab-icon {
  font-size: 48rpx;
}

.order-tab-label {
  font-size: 22rpx;
  color: #555;
}

/* Menu Groups */
.menu-group {
  background: #fff;
  margin-bottom: 20rpx;
}

.group-title {
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 24rpx 8rpx;
  background: #fff;
}

.menu-list {}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon {
  font-size: 36rpx;
  width: 44rpx;
  text-align: center;
}

.menu-label {
  font-size: 30rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.menu-value {
  font-size: 26rpx;
  color: #FF5D00;
}

.menu-arrow {
  font-size: 26rpx;
  color: #ccc;
}
