    <view class="category-grid">
      <view
        class="category-item"
        wx:for="{{categories}}"
        wx:key="id"
        bindtap="onCategoryTap"
        data-name="{{item.name}}"
      >
        <view class="category-icon">{{item.icon}}</view>
        <text class="category-name">{{item.name}}</text>
      </view>
    </view>
  </view>

  <!-- Hot Items -->
  <view class="section">
