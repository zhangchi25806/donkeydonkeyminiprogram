    <view class="item-grid">
      <view
        class="item-card"
        wx:for="{{hotItems}}"
        wx:key="id"
        bindtap="onItemTap"
        data-name="{{item.name}}"
      >
        <view class="item-image">
          <view class="item-tag">{{item.tag}}</view>
        </view>
        <view class="item-info">
          <text class="item-name">{{item.name}}</text>
          <text class="item-price">{{item.price}}</text>
