  <!-- Banner -->
  <swiper class="banner" indicator-dots autoplay interval="3000" circular>
    <swiper-item
      wx:for="{{banners}}"
      wx:key="id"
      bindtap="onBannerTap"
      data-id="{{item.id}}"
    >
      <view class="banner-item" style="background:{{item.color}}">
        <text class="banner-title">{{item.title}}</text>
        <text class="banner-desc">{{item.desc}}</text>
      </view>
    </swiper-item>
  </swiper>

  <!-- Categories -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">åˆ†ç±»</text>
