/* pages/home/home.wxss */
page {
  background: #f5f5f5;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.page {
  flex: 1;
}

/* Search Bar */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #fff;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 14rpx 24rpx;
  gap: 12rpx;
}

.search-icon {
  font-size: 30rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

.search-btn {
  font-size: 28rpx;
  color: #FF5D00;
  font-weight: 500;
  white-space: nowrap;
}

/* Banner */
.banner {
  width: 100%;
  height: 320rpx;
  margin-bottom: 20rpx;
}

.banner-item {
  width: 100%;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 0;
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.banner-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* Sections */
.section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
}

.section-more {
  font-size: 26rpx;
  color: #999;
}

/* Category Grid */
.category-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 0;
}

.category-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  background: #fff5f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 24rpx;
  color: #444;
}

/* Item Grid */
.item-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.item-card {
  width: calc(50% - 10rpx);
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.item-image {
  width: 100%;
  height: 240rpx;
  background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: #FF5D00;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 14rpx;
  border-radius: 20rpx;
}

.item-info {
  padding: 16rpx;
}

.item-name {
  font-size: 26rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item-price {
  font-size: 30rpx;
  color: #FF5D00;
  font-weight: bold;
}
