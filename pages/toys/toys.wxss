/* pages/toys/toys.wxss */
page {
  background: #f5f5f5;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* Category Scroll */
.category-scroll {
  background: #fff;
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
}

.category-list {
  display: flex;
  padding: 16rpx 16rpx;
  gap: 12rpx;
  white-space: nowrap;
}

.cat-item {
  display: inline-block;
  padding: 10rpx 28rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  white-space: nowrap;
  flex-shrink: 0;
}

.cat-active {
  background: #FF5D00;
  color: #fff;
  font-weight: bold;
}

/* Sort Bar */
.sort-bar {
  background: #fff;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 1rpx;
}

.sort-current {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #444;
}

.sort-arrow {
  font-size: 20rpx;
  color: #999;
}

/* Sort Dropdown */
.sort-menu {
  position: absolute;
  top: 172rpx;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.sort-option {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

.sort-option-active {
  color: #FF5D00;
  font-weight: bold;
}

/* Product Grid */
.product-scroll {
  flex: 1;
  overflow-y: hidden;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx;
  gap: 16rpx;
}

.product-card {
  width: calc(50% - 8rpx);
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.06);
}

.product-img {
  width: 100%;
  height: 260rpx;
  position: relative;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 16rpx;
  opacity: 0.9;
}

.product-tag {
  background: #FF5D00;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  height: 72rpx;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 10rpx;
}

.stars {
  font-size: 20rpx;
  color: #FFA500;
}

.rating-val {
  font-size: 20rpx;
  color: #FFA500;
}

.sales-val {
  font-size: 20rpx;
  color: #999;
}

.product-price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-group {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price {
  font-size: 32rpx;
  color: #FF5D00;
  font-weight: bold;
}

.original-price {
  font-size: 22rpx;
  color: #bbb;
  text-decoration: line-through;
}

.cart-btn {
  width: 52rpx;
  height: 52rpx;
  background: #FF5D00;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}
